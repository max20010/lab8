#include "stdafx.h"
#include "iostream"
using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	setlocale(LC_ALL, "ru");
	int A[2], B[2], C[2];
	float ac, ab;
	cout << "Введите х и y для А: ";
	cin >> A[0];
	cin >> A[1];
	cout << "Введите х и y для B: ";
	cin >> B[0];
	cin >> B[1];
	cout << "Введите х и y для C: ";
	cin >> C[0];
	cin >> C[1];
	ab = sqrt(pow((A[0] - B[0]), 2) + pow((A[1] - B[1]), 2));
	ac = sqrt(pow((A[0] - C[0]), 2) + pow((A[1] - C[1]), 2));
	if (ac > ab){
		cout << "B ближе к А, чем С. AB = " << (float)ab << endl;
	}
	if (ac < ab){
		cout << "C ближе к А, чем B. AC = " << (float)ac << endl;
	}
	return 0;
}

